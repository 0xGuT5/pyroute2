!
! create two dummy interfaces, set mtu and
! add them as ports to the test bridge.
!
create ifname=test01 kind=dummy
create ifname=test02 kind=dummy
create ifname=testbr kind=bridge
commit

interfaces
    test01
        set_mtu 1280
        up
    test02
        set_mtu 1280
        up
commit

interfaces
    testbr
        add_port test01
        add_port test02
        add_ip 10.1.2.3/24
        add_ip 10.1.2.4/24
        set_br_stp_state 1
        up
commit
